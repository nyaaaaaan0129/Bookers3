<div class="container">
  <div class="row">
  	<%= render 'shared/sidebar' %>
  	<div class="col-xs-9">
  	  <h2>Books</h2>
      
  		<table class="table">

            <thead>
              <th>User</th>
              <th>Title</th>
              <th>Opinion</th>
            </thead> 

            <tbody>
            <% @books.each do |book| %>
              <tr>
                <td width="100" height="50"><div class="user-edit-image"><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', class: "img-square", fallback: "no_image.jpg", size: "60x60" %></div></td>
                <td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            </tbody>
        </table>
  	</div>
  </div>
</div>
