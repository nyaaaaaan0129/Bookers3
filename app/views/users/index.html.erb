<div class="container">
  <div class="row">
  	<%= render 'shared/sidebar' %>
  	<div class="col-xs-9">
  	  <h2>Users</h2>
      
  		<table class="table">

            <thead>
              <th>image</th>
              <th>name</th>
              <th></th>
            </thead> 

            <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "img-square", fallback: "no_image.jpg", size: "60x60" %></td>
                <td><%= user.name %></td>
                <td>show</td>
              </tr>
            <% end %>
            </tbody>
        </table>
  	</div>
  </div>
</div>