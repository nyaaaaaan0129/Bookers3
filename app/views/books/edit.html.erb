<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <h2>Editing Book</h2>

    <%= render 'shared/book_error_message', book: @book %>

    <%= form_for(@book) do |f| %>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true, autocomplete: "title", class:"col-xs-12" %>
      </div>
      
      <div class="field">
        <%= f.label :opinion %><br />
        <%= f.text_area :body, autofocus: true, autocomplete: "body", class:"col-xs-12" %>
      </div>
      <div class="actions">
        <span class="submit_button"><%= f.submit "Update Book", class:"col-xs-12 btn btn-primary" %></span>
      </div>
    <% end %>
   <%= link_to "Show", book_path(@book) %><span> | </span>
   <%= link_to "Back", books_path %>
   </div>
  </div>
</div>